::Left4Dev.Settings <-
{
	// [1/0] Enable/Disable printing the concepts to the console
	concepts = 0
	
	// [1/0] Enable/Disable printing the current flow percent of the survivors as onscreen message
	flow = 0

	// [1/0] Enable/Disable printing the damage details to the console
	damage = 0
	
	// Minimum log level for the addon's log lines into the console
	// 0 = No log
	// 1 = Only [ERROR] messages are logged
	// 2 = [ERROR] and [WARNING]
	// 3 = [ERROR], [WARNING] and [INFO]
	// 4 = [ERROR], [WARNING], [INFO] and [DEBUG]
	loglevel = 3
}
